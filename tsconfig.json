{
  "compilerOptions": {
    "outDir": "./dist", // Specifies the output directory for compiled files
    "rootDir": "./src", // Specifies the root directory of input files
    "module": "commonjs", // Module system for Node.js
    "target": "ES6", // Target version of ECMAScript
    "esModuleInterop": true, // Allows default imports from modules with no default export
    "strict": true // Enable all strict type-checking options
  },
  "include": ["src/**/*"] // Include all TypeScript files in the src directory
}
